<?xml version="1.0" encoding="utf-8"?>
<!-- activity_teams.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="modelo"
            type="com.nimur.mycoachbasketball.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Título "Mis Equipos" en la parte superior -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mis_equipos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/buscar_equipo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/teamRecyclerView"
            android:layout_marginBottom="16dp"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:text="@={modelo.parametroBusqueda}"
            android:inputType="textAutoComplete"
            android:autofillHints="nombre,categoria" />


        <!-- RecyclerView para la lista de equipos debajo del título -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addTeamFab"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <!-- FloatingActionButton en la parte inferior central -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addTeamFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_add1"
            android:backgroundTint="@color/bluelogo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
